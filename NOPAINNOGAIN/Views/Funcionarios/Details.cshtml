@model NOPAINNOGAIN.Models.Funcionario

@{
    ViewData["Title"] = "Detalhes do Funcionario - " + Model.Nome;
}

<h2 style="padding-top: 50px">@ViewData["Title"]</h2>
<hr />

<div class="row" style="padding-top: 40px">
    <div class="col-md-4">
        <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 350px; height: 390px" ; />
    </div>
    <div class="col-md-6" style="padding-top: 5px">
        <d1>
            <dt style="font-size: 18px">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd style="font-size: 20px">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt style="padding-top: 15px; font-size: 18px">
                @Html.DisplayNameFor(model => model.Documento)
            </dt>
            <dd style="font-size: 20px">
                @Html.DisplayFor(model => model.Documento)
            </dd>
            <dt style="padding-top: 15px; font-size: 18px">
                @Html.DisplayNameFor(model => model.TipoFuncionario)
            </dt>
            <dd style="font-size: 20px">
                @Html.DisplayFor(model => model.TipoFuncionario)
            </dd>
            <dt style="padding-top: 15px; font-size: 18px">
                @Html.DisplayNameFor(model => model.DataNascimento)
            </dt>
            <dd style="font-size: 20px">
                @Html.DisplayFor(model => model.DataNascimento)
            </dd>
            <dt style="padding-top: 15px; font-size: 18px">
                @Html.DisplayNameFor(model => model.Salario)
            </dt>
            <dd style="font-size: 20px">
                R$ @Html.DisplayFor(model => model.Salario),00
            </dd>
        </d1>
    </div>
</div>
<div id="EnderecoTarget" style="padding-top: 15px">
    <partial name="_DetalhesEnderecos" />
</div>
<div id="myModal" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="myModalContent"></div>
        </div>
    </div>
</div>
<div style="padding-top: 50px">
    <a class="btn btn-info" asp-action="Index2"><span class="fa fa-arrow-left"></span></a>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ID"><span class="fa fa-pencil-alt"></span></a>
</div>

<style>
    body {
        background: linear-gradient(166deg, rgba(255,255,255,0.7346288857339811) 6%, rgba(0,160,255,0.10997902579000352) 100%);
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        BuscaCep();
    </script>
    <script>
        $(document).ready(function () {
            AjaxModal();
        });
    </script>
}