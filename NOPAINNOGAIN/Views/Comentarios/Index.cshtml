        function play() {
            player.play();
            button.textContent = "Pause";
        }

        function pause() {
            player.pause();
            button.textContent = "Play";
        }
        $(document).keypress(function (e) {
            if (e.which == 13) {
                $("#button2").click()
                const audio = document.getElementById("audio")
